<div class="card mt-3 mx-3 p-0" style="width: 18rem;">
	<div class="card-img-top">
  <% if board.image.attached? %>
    <%= image_tag board.image, class: 'img-fluid' %>
  <% end %>
   <div class="card-img-overlay">
      <h6><span class="badge bg-secondary"><%= board.category %></span></h6>
    </div>
  </div>
	
	<div class="card-title text-center card-header">
   <h5><%= board.user.displayname %></h5>
  </div>
  <div class="card-body">
    <p class="card-text">
      <%= board.body %>
    </p>
  </div>
  
  <div class="d-grid gap-2 d-md-block m-3">
  <% if logged_in? %>
    <% if board.majors.find_by(user: current_user) %>
      <%= link_to "#{board.majors_count}めちゃR", board_majors_path(board), data:{turbo_method: :delete} ,class:"btn btn-primary btn-sm"%>
    <% else %>
      <%= link_to "#{board.majors_count}めちゃR", board_majors_path(board), data:{turbo_method: :post},class:"btn btn-outline-primary btn-sm" %>
    <% end %>

    <% if board.minors.find_by(user: current_user) %>
      <%= link_to "#{board.minors_count}シブR", board_minors_path(board), data:{turbo_method: :delete} ,class:"btn btn-secondary btn-sm"%>
    <% else %>
      <%= link_to "#{board.minors_count}シブR", board_minors_path(board), data:{turbo_method: :post},class:"btn btn-outline-secondary btn-sm" %>
    <% end %>
  <% else %>
    <button type="button" class="btn btn-outline-primary" disabled><%= "#{board.majors_count}めちゃR" %></button>
    <button type="button" class="btn btn-outline-secondary" disabled><%= "#{board.minors_count}シブR" %></button>
  <% end %>
  </div>

  <div class="text-end card-footer">
    <small class="text-muted">
      <%= board.created_at.strftime("%Y-%m-%d %H:%M") %>
    </small>
    <% if logged_in? %>
      <%= render 'crud_menus', board: board if current_user.own?(board) %>
    <% end %>
  </div>

</div>